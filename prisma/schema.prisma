generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Chain {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  stores Store[] @relation("ChainStores")
  menus  Menu[]  @relation("ChainMenus")
}

model Store {
  id         String   @id @default(uuid())
  chain_id   String
  chain      Chain    @relation(fields: [chain_id], references: [id], name: "ChainStores")
  name       String
  address    String
  lat        Float
  lng        Float
  place_id   String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Menu {
  id         String   @id @default(uuid())
  chain_id   String
  chain      Chain    @relation(fields: [chain_id], references: [id], name: "ChainMenus")
  name       String
  salt       Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
